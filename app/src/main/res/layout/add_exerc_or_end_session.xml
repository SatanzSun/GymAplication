<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddExerciseOrEndSession"
    android:background="@drawable/addexercise">

    <Button
        android:id="@+id/addExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="157dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="67dp"
        android:onClick="addExercise"
        android:text="Add exercise"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:fontFamily="@font/arbutus_slab"
        app:layout_constraintBottom_toTopOf="@+id/saveSession"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>

    <Button
        android:id="@+id/saveSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="250dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="End session"
        android:fontFamily="@font/arbutus_slab"
        android:textAllCaps="false"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addExercise" />

    <TextView
        android:id="@+id/currentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toTopOf="@+id/addExercise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30dp"
        android:fontFamily="@font/arbutus_slab"/>

</androidx.constraintlayout.widget.ConstraintLayout>